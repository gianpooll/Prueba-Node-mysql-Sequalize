extends ../plantilla

block contenido

		div(class="text-center mb-4	border border-primary rounded")
			h1 Listado de usuarios

		// --------- TABLA DE CONTENIDO DE USUARIOS --------------
		table(class="table table-bordered table-hover text-center table-sm table-striped")
			thead(class="bg-dark text-white text-center")
				tr
					th(scope="col") ID USUARIO
					th(scope="col") NOMBRE USUARIO
					th(scope="col") EMAIL USUARIO
					th(scope="col") NICK NAME
					th(scope="col") CONTRASEÃ‘A
					th(scope="col") EDITAR
					th(scope="col") ELIMINAR
			tbody
			for item in usuarios
				tr
					td #{item.idusuario}
					td #{item.nombre_usuario}
					td #{item.email}
					td #{item.usuario}
